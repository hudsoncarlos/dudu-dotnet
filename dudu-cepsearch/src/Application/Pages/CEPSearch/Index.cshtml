@model Application.Pages.CEPSearch.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Serach">Serach New</a>
</p>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            @*<label class="control-label">CEP: *</label>*@
            @Html.DisplayName("CEP: *")
            @Html.TextBox("searchCep", string.Empty, new { @class = "form-control", @maxlength = "8", @minlength = "8" })
            @Html.ValidationMessage("searchCep", new { @style = "color:red;" })
        </div>
        <div class="form-group">
            <input type="submit" value="Buscar" class="btn btn-primary searchCep" />
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Cep")
            </th>
            <th>
                @Html.DisplayName("Logradouro")
            </th>
            <th>
                @Html.DisplayName("Complemento")
            </th>
            <th>
                @Html.DisplayName("Bairro")
            </th>
            <th>
                @Html.DisplayName("Localidade")
            </th>
            <th>
                @Html.DisplayName("UF")
            </th>
            <th>
                @Html.DisplayName("IBGE")
            </th>
            <th>
                @Html.DisplayName("Gia")
            </th>
            <th>
                @Html.DisplayName("DDD")
            </th>
            <th>
                @Html.DisplayName("Siafi")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.cep) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.logradouro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.complemento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.localidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.uf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ibge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ddd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.siafi)
            </td>
            @*<td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>*@
        </tr>
}
    </tbody>
</table>
